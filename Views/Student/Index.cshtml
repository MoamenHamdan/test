@model List<Student>

<link href="~/css/table.css" rel="stylesheet" />

<a class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="Create">Add new Student</a>
<table>
    <tr>
        <th>Student Name</th>
        <th>Student Age</th>
        <th>Student Image</th>
        <th>Delete</th>
    </tr>


    @foreach (Student student in Model)
    {
        <tr>
            <td>@student.studentName</td>
            <td>@student.studentAge</td>
            <td>
                <img src="~/StudentPic/@student.PhotoName" width="50" height="50m">
            </td>
            <td>
                <a href="/Student/Delete/@student.studentId">Delete @student.studentName</a>
            </td> 
        </tr> 
    }
</table>
